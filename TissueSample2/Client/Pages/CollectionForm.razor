@using TissueSample2.Shared.Models
@inject Services.ICollectionService CollectionService

<DataAnnotationsValidator />
<div class="form-group row">
    <div class="col-md-6">
        <label for="Disease" class="form-label">Disease Term</label>
        <InputText class="form-control" @bind-Value="temp_collection.disease_term" />
        <ValidationMessage For="@(() => temp_collection.disease_term)" />
    </div>
    <div class="col-md-6">
        <label for="Title" class="form-label">Title</label>
        <InputText class="form-control" @bind-Value="temp_collection.title" />
        <ValidationMessage For="@(() => temp_collection.title)" />
    </div>
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary">Save</button>
</div>

@code {
    [EditorRequired]
    [Parameter]
    public Collection? temp_collection { get; set; }
}
