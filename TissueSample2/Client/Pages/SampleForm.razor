@using TissueSample2.Shared.Models
@inject Services.ISampleService SampleService

<DataAnnotationsValidator />
<div class="form-group row">
    <div class="col-md-6">
        <label for="donorcount" class="form-label">Donor Count</label>
        <InputNumber class="form-control" @bind-Value="temp_sample.donor_count" placeholder="i.e. 1000" />
        <ValidationMessage For="@(() => temp_sample.donor_count)" />
    </div>
    <div class="col-md-6">
        <label for="mattype" class="form-label">Material Type</label>
        <InputText class="form-control" @bind-Value="temp_sample.mat_type" />
        <ValidationMessage For="@(() => temp_sample.mat_type)" />
    </div>
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary">Save</button>
</div>

@code {
    [EditorRequired]
    [Parameter]
    public Sample? temp_sample { get; set; }
}
